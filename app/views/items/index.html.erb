<div class="container">
<% @items.each do |item| %>
    <%= image_tag item.image_url.to_s %>
    <h3><%= item.title %></h3>
    <h4><%= item.brand %></h4>

    <%= item.buylink %>
   
    <div class="edit">
      <%= link_to 'Show', item %>
      <%= link_to 'Edit', edit_item_path(item) %>
      <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
<% end %>

<br />

<%= link_to 'New Item', new_item_path %>
</div>