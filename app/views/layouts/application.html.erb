<!DOCTYPE html>
<html>
<head>
  <title>The Odd</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-39925214-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</head>
<body>
<nav class="main_menu">
	<div class="container">
		<a href="<%= root_path %>"><h3 class="logo">The Odd</h3></a>
		<div class="links_menu">
			<% if user_signed_in? %>
					<%= image_tag current_user.image_version, :class => "image_user"%>
					<%= link_to "Salir", destroy_authentication_session_path, method: :delete %>
				<% else %>
					<%= link_to "Entrar", new_authentication_session_path %>
			<% end %>
		</div>
	</div>
	<div class="sep"></div>
</nav>
<%= yield %>
</script>
</body>
</html>
